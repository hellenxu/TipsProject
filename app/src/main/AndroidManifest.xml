<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.six.tipsproject">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.RECEIVE_STK_COMMANDS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".SixApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="APP_TAG"
            android:value="${APP_TAG}" />

        <activity android:name=".dialog.DialogDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ipc.IPCThird" android:process=":remote"/>

        <activity android:name=".plastic.DetailsActivity" android:process="com.six.tipsproject.remote"/>

        <activity android:name=".drawer.DrawerActivity"/>

        <!--<activity android:name=".drawable.DrawableActivity">-->
            <!--<intent-filter>-->
                <!--<action android:name="com.six.tips.pending"/>-->
                <!--<category android:name="android.intent.category.DEFAULT"/>-->
            <!--</intent-filter>-->
        <!--</activity>-->

        <activity android:name=".mockito.JumpToActivity" />

        <receiver android:name=".broadcast.SixBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.ACTION_SHUTDOWN"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".broadcast.SixDeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data android:name="android.app.device_admin"
                android:resource="@xml/device_admin_sample"/>
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".mockito.SampleReceiver">
            <intent-filter>
                <action android:name="ca.six.sample.broadcast"/>
            </intent-filter>
        </receiver>

        <activity android:name=".fragment.DialogActivity"/>
    </application>

</manifest>
