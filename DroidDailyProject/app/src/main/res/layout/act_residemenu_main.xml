<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#fff">

    <TextView android:gravity="center" android:layout_margin="10dp" android:textColor="#333"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Home" android:textSize="26sp"/>

    <TextView android:layout_height="80dp" android:layout_width="match_parent" android:background="@android:color/holo_blue_bright"
        android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:id="@+id/tv_open"
        android:text="Open Menu" android:gravity="center" android:textSize="15sp" />

    <TextView android:layout_height="80dp" android:layout_width="match_parent" android:layout_margin="30dp" android:background="@android:color/holo_orange_light"
       android:text="Ignored View" android:gravity="center" android:textSize="15sp" android:id="@+id/tv_ignored" />

</LinearLayout>